{
  "backup_configuration": {
    "version": "1.0",
    "description": "Configuración del sistema de backup automatizado para Rexus.app",
    "databases": {
      "users": {
        "description": "Base de datos de usuarios, autenticación y permisos",
        "priority": "critical",
        "backup_frequency": "daily",
        "retention_days": 90
      },
      "inventario": {
        "description": "Base de datos principal de negocio - inventario, obras, pedidos",
        "priority": "critical", 
        "backup_frequency": "daily",
        "retention_days": 90
      },
      "auditoria": {
        "description": "Base de datos de trazabilidad y eventos del sistema",
        "priority": "high",
        "backup_frequency": "daily", 
        "retention_days": 365
      }
    },
    "schedules": {
      "daily_full_backup": {
        "time": "02:00",
        "type": "full",
        "compress": true,
        "verify_integrity": true,
        "cleanup_old": true
      },
      "weekly_verification": {
        "day": "sunday",
        "time": "03:00", 
        "action": "verify_all_backups"
      },
      "monthly_cleanup": {
        "day": 1,
        "time": "01:00",
        "action": "deep_cleanup"
      }
    },
    "storage": {
      "base_directory": "backups",
      "structure": {
        "databases": "backups/databases/",
        "config": "backups/config/",
        "application": "backups/application/",
        "logs": "backups/logs/",
        "temp": "backups/temp/",
        "restore": "backups/restore/"
      },
      "compression": {
        "enabled": true,
        "algorithm": "gzip",
        "level": 6
      },
      "encryption": {
        "enabled": false,
        "algorithm": "AES256"
      }
    },
    "retention_policy": {
      "daily_backups": 30,
      "weekly_backups": 12,
      "monthly_backups": 12,
      "yearly_backups": 5
    },
    "notifications": {
      "email": {
        "enabled": false,
        "smtp_server": "",
        "smtp_port": 587,
        "recipients": [],
        "send_on_success": true,
        "send_on_failure": true
      },
      "system": {
        "log_to_file": true,
        "log_level": "INFO",
        "log_retention_days": 30
      }
    },
    "recovery_testing": {
      "enabled": true,
      "frequency": "monthly",
      "test_database": "rexus_backup_test",
      "verify_data_integrity": true
    }
  },
  "environment_requirements": {
    "sql_server_version": "2017+",
    "required_tools": [
      "sqlcmd",
      "python >= 3.8",
      "pyodbc"
    ],
    "permissions": [
      "BACKUP DATABASE",
      "RESTORE DATABASE", 
      "CREATE DATABASE (for testing)"
    ],
    "disk_space": {
      "minimum_free_gb": 10,
      "recommended_free_gb": 50
    }
  },
  "monitoring": {
    "health_checks": {
      "database_connectivity": true,
      "disk_space": true,
      "backup_file_integrity": true
    },
    "alerts": {
      "backup_failure": "critical",
      "disk_space_low": "warning",
      "backup_size_anomaly": "info"
    }
  }
}