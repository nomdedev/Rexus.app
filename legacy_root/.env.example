# ==================================================================
# REXUS.APP - Configuración de Variables de Entorno de Ejemplo
# ==================================================================
# Copie este archivo como '.env' y configure los valores apropiados
# NUNCA commite el archivo .env real al repositorio

# ------------------------------------------------------------------
# BASE DE DATOS
# ------------------------------------------------------------------
DB_SERVER=localhost
DB_USERNAME=rexus_user
DB_PASSWORD=your_secure_db_password_here
DB_INVENTARIO=rexus_inventario
DB_USERS=rexus_users
DB_AUDITORIA=rexus_auditoria

# ------------------------------------------------------------------
# AUTENTICACIÓN DE DESARROLLO (SOLO PARA DEV/TESTING)
# ------------------------------------------------------------------
# ADVERTENCIA: Solo usar en desarrollo. Nunca en producción.
REXUS_DEV_AUTO_LOGIN=false
REXUS_DEV_USER=dev_admin
REXUS_DEV_PASSWORD=your_dev_password_here

# ------------------------------------------------------------------
# CREDENCIALES DE FALLBACK (SOLO EMERGENCIA)
# ------------------------------------------------------------------
# Solo se usan cuando la BD no está disponible
FALLBACK_ADMIN_USER=emergency_admin
FALLBACK_ADMIN_PASSWORD=your_emergency_password_here

# ------------------------------------------------------------------
# CONFIGURACIÓN DE SEGURIDAD - ⚠️ CRÍTICO PARA PRODUCCIÓN ⚠️
# ------------------------------------------------------------------
# IMPORTANTE: Genere claves seguras usando:
# python -c "import secrets; print(f'SECRET_KEY={secrets.token_hex(32)}')"
# python -c "import secrets; print(f'JWT_SECRET_KEY={secrets.token_hex(32)}')"
# python -c "import secrets; print(f'ENCRYPTION_KEY={secrets.token_hex(32)}')"

# Clave principal de la aplicación (mínimo 32 caracteres hexadecimales)
SECRET_KEY=your_secret_key_here_generate_with_secrets_token_hex_32

# Clave para JWT tokens (mínimo 32 caracteres hexadecimales)
JWT_SECRET_KEY=your_jwt_secret_key_here_generate_with_secrets_token_hex_32

# Clave para cifrado (mínimo 32 caracteres hexadecimales)
ENCRYPTION_KEY=your_encryption_key_here_generate_with_secrets_token_hex_32

# Configuración JWT
JWT_EXPIRATION_HOURS=24

# Salt rounds para bcrypt (recomendado: 12-15)
PASSWORD_SALT_ROUNDS=12

# ------------------------------------------------------------------
# DEMO MODE (SOLO PARA DEMOS/TESTING)
# ------------------------------------------------------------------
# Credenciales para modo demo (no usar en producción)
DEMO_ADMIN_PASSWORD=demo_secure_admin_2025
DEMO_SUPERVISOR_PASSWORD=demo_secure_supervisor_2025  
DEMO_OPERADOR_PASSWORD=demo_secure_operador_2025
DEMO_CONTADOR_PASSWORD=demo_secure_contador_2025

# ------------------------------------------------------------------
# CONFIGURACIÓN DE APLICACIÓN
# ------------------------------------------------------------------
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# ------------------------------------------------------------------
# NOTAS DE SEGURIDAD
# ------------------------------------------------------------------
# 1. Use contraseñas fuertes (mínimo 12 caracteres)
# 2. Incluya mayúsculas, minúsculas, números y símbolos
# 3. Cambie las contraseñas regularmente
# 4. Nunca use las mismas contraseñas en múltiples sistemas
# 5. Agregue .env al .gitignore para evitar commits accidentales